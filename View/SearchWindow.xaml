<Window x:Class="EngineerKA_1._0.View.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngineerKA_1._0.View"
        mc:Ignorable="d"
        Title="ПОИСК" Height="250" Width="350"
         Background="Moccasin">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="1" HorizontalAlignment="Left"  VerticalAlignment="Center"
                   Margin="10,10,10,10" FontSize="16" > Поиск</TextBlock>
        <TextBox Grid.Row="1" HorizontalAlignment="Center" Width="210"
                  Height="20" Margin="10,10,10,10" />
        <Button Grid.Row="1" Height="35" Width="45" Content="Искать"
                HorizontalAlignment="Right" Margin="10,10,10,10"  />
    </Grid>
</Window>

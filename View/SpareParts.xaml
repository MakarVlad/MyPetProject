<Window x:Class="EngineerKA_1._0.View.SpareParts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EngineerKA_1._0.View"
        mc:Ignorable="d"
        Title="Запасные части" Height="450" Width="740"
        Background="#8bc9a3"
        Name="SparePartsWindow" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ControlTemplate x:Key="Buttons" TargetType="Button">
            <Grid Name ="btn" Height="45">
                <Border>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{DynamicResource ResourceKey=img}"
                               VerticalAlignment="Bottom" HorizontalAlignment="Left"
                               Height="25" Width="25" Stretch="Fill" Margin="20,0,0,12"/>
                        <Label Content="{TemplateBinding Content}" Background="Transparent"
                               VerticalAlignment="Bottom"  FontSize="23"
                               FontFamily="Comic Sans MS" FontWeight="UltraBold">
                            <Label.Style>
                                <Style TargetType="Label">
                                    <Setter Property="Foreground" Value="Black"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsMouseOver,ElementName=btn}" Value="True">
                                            <Setter Property="Foreground" Value="Gray"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Label.Style>
                        </Label>
                    </StackPanel>
                </Border>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Grid>
       
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>

        <TabControl Grid.Row="0" SelectedIndex="{Binding SelectedTab}"   >

            <TabItem Name="InStockTab" Background="#8bc9a3"  >
                <TabItem.Header>
                    <TextBlock Text="В НАЛИЧИИ НА СКЛАДЕ"/>
                </TabItem.Header>
                <DataGrid  x:Name="ViewCurrentParts" ItemsSource ="{Binding  AllCurrentSpareParts}"
                           SelectedItem="{Binding Selected}" 
                           AutoGenerateColumns="False" CanUserAddRows="False"
                           Background="#c3ebd2" RowBackground="#c3ebd2">

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#02702b"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    
                    <DataGrid.Columns >

                        <DataGridTextColumn Header="Код"
                                    Binding="{Binding Path=PartCode}"/>
                        <DataGridTextColumn Header="Наименование"
                                    Binding="{Binding Path=NamePart}"/>
                        <DataGridTextColumn Header="Место хранения"
                                    Binding="{Binding Path=CellCode}"/>
                        <DataGridTextColumn Header="Единица измерения"
                                    Binding="{Binding Path=UnitPart}"/>
                        <DataGridTextColumn Header="Колличество"
                                    Binding="{Binding Path=Amount}"/>
                        <DataGridTextColumn Header="Цена"
                                    Binding="{Binding Path=Price}"/>

                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Name="AdmissionTab" Background="#8bc9a3">
                <TabItem.Header>
                    <TextBlock Text="ПОСТУПИЛО НА СКЛАД"/>
                </TabItem.Header>
                <DataGrid x:Name="ViewAdmissionParts" ItemsSource="{Binding AllAdmissionSpareParts}"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="#c3ebd2" RowBackground="#c3ebd2">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Код"
                                            Binding="{Binding Path=PartCode}"/>
                        <DataGridTextColumn Header="Наименование"
                                            Binding="{Binding Path=NamePart}"/>
                        <DataGridTextColumn Header="Место хранения"
                                            Binding="{Binding Path=CellCode}"/>
                        <DataGridTextColumn Header="Единица измерения"
                                            Binding="{Binding Path=UnitPart}"/>
                        <DataGridTextColumn Header="Колличество"
                                            Binding="{Binding Path=Amount}"/>
                        <DataGridTextColumn Header="Цена"
                                            Binding="{Binding Path=Price}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Name="ReceivedTab" Background="#8bc9a3">
                <TabItem.Header>
                    <TextBlock Text="ПОЛУЧЕННО СО СКЛАДА" />
                </TabItem.Header>
                <DataGrid x:Name="ViewReceivedParts" ItemsSource="{Binding AllReceivedSP}"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="#c3ebd2" RowBackground="#c3ebd2">
                    <DataGrid.Columns>
                            <DataGridTextColumn Header="Код"
                                                Binding="{Binding Path=PartCode}"/>
                            <DataGridTextColumn Header="Наименование"
                                                Binding="{Binding Path=NamePart}" />
                            <DataGridTextColumn Header="Место хранения"
                                                Binding="{Binding Path=CellCode}"/>
                            <DataGridTextColumn Header="Единица измерения"
                                                Binding="{Binding Path=UnitPart}"/>
                            <DataGridTextColumn Header="Колличество"
                                                Binding="{Binding Path=Amount}"/>
                            <DataGridTextColumn Header="Цена"
                                                Binding="{Binding Path=Price}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Name="OutOfStockTab" Background="#8bc9a3">
                <TabItem.Header>
                    <TextBlock Text="ОТСУТСТВУЮТ НА СКЛАДЕ"/>
                </TabItem.Header>
                <DataGrid x:Name="ViewOutOfStock"  ItemsSource="{Binding AllOutOfStock}"
                          AutoGenerateColumns="False" CanUserAddRows="False"
                          Background="#c3ebd2" RowBackground="#c3ebd2">
                    <DataGrid.Columns>
                        <DataGridTextColumn  Header="Код" 
                                                Binding="{Binding Path=PartCode}"/>
                        <DataGridTextColumn Header="Наименование"
                                                Binding="{Binding Path=NamePart}" />
                        <DataGridTextColumn Header="Место хранения"
                                                Binding="{Binding Path=CellCode}"/>
                        <DataGridTextColumn Header="Единица измерения"
                                                Binding="{Binding Path=UnitPart}"/>
                        <DataGridTextColumn Header="Колличество"
                                                Binding="{Binding Path=Amount}"/>
                        <DataGridTextColumn Header="Цена"
                                                Binding="{Binding Path=Price}"/>

                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Orientation="Horizontal" Grid.Row="1">

            <Button  Name="Load" Content="Загрузить отчёт"  Template="{StaticResource ResourceKey=Buttons}"
                             Command="{Binding OpenLoadWindow}">
                <Button.Resources>
                    <ImageSource x:Key="img">/Images/icons/download.png</ImageSource>
                </Button.Resources>
            </Button>
            <Button Name ="Update"  Content="Обновить" Template="{StaticResource ResourceKey=Buttons}"
                              Command="{Binding OpenUpdate}">
                <Button.Resources>
                    <ImageSource x:Key="img">/Images/icons/update.png</ImageSource>
                </Button.Resources>
            </Button>
            <Button Name="Search" Content="Искать" Template="{StaticResource ResourceKey=Buttons}"
                             Command="{Binding OpenSearch}">
                <Button.Resources>
                    <ImageSource x:Key="img">/Images/icons/search.png</ImageSource>
                </Button.Resources>
            </Button>
            <Button Name="Delete" Content="Удалить" Template="{StaticResource ResourceKey=Buttons}"
                    Command="{Binding OpenDeleteWindow}">
                <Button.Resources>
                    <ImageSource x:Key="img">/Images/icons/delete.png</ImageSource>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
